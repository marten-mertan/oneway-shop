{% set sliderPics = ["item-1.jpg", "item-1-1.jpg", "item-1-2.jpg", "item-1-3.jpg"] %}
{% set sliderMinis = ["item-1.jpg", "item-1-1.jpg", "item-1-2.jpg", "item-1-3.jpg"] %}

<div class="slider-item">
  <div class="slider-item-main js-slider-for">
    {% for img in sliderPics %}
    <div class="slider-item-main__element">
      <img src="assets/img/{{img}}" alt="Maison Margiela Fusion Low Sneakers">
    </div>
    {% endfor %}
  </div>
  <div class="slider-item-nav">
    
    <div class="slider-item-nav js-slider-nav">
      {% for img in sliderMinis %}
        <div class="slider-item-nav__element">
          <img src="assets/img/{{img}}" alt="Maison Margiela Fusion Low Sneakers">
        </div>
      {% endfor %}
    </div>
  </div>
</div>